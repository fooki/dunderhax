{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "noEmit": true,

    "strict": true,
    "alwaysStrict": true,

    // avoid this eventually
    "noImplicitAny": false,
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
